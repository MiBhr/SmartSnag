@model IEnumerable<SmartSnag.Domain.Entities.WorkPackage>

<style type="text/css">
    a.custom-action-link {
        color: black;
        text-decoration: none;
    }

        a.custom-action-link:hover {
            font-weight: bold;
        }
</style>

<div class="panel panel-primary ">
    <div class="panel-heading">Work packages list</div>
    <div class="panel-body scrollable">
        <table class="table table-striped table-hover ">
            <tr>
                <th width="20%">
                    @Html.DisplayNameFor(model => model.WorkPackageCode)
                </th>
                <th width="60%">
                    @Html.DisplayNameFor(model => model.WorkPackageDescription)
                </th>
                <th wudth="20%">Delete</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>    
                        @Html.ActionLink(item.WorkPackageCode.ToString(), "Edit",
                               new { item.WorkPackageID },
                               new { @class = "custom-action-link",  @title = "Click to Edit" })                                     
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkPackageDescription)
                    </td>
                    <td><a href="@Url.Action("Delete","WorkPackage", new { item.WorkPackageID })">
                        <input type="button" value="Delete" class="btn btn-danger btn-xs" />
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
