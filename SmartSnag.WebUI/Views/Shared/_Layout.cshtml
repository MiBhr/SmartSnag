<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ProjectSpecific.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script>      
        // flaga oznaczajca focus dla elementu 
        // domsylnie wartosc -1; brak focusa
        var focus = -1;   
        $(document).ready(function () {
            $("#searchInput").focus(function () {
                focus = 1;
            });
        });

        //funkcja obsugujaca mouseenter event    
        $(document).ready(function()
        {
          
            $("#searchGroup").mouseenter(function () {
                $("#searchInput").animate({ width: "200%"}, "fast")
            });
        });

        //funkcja obsugujaca mouseleave event pod warunkiem ze kontrolka input nie ma ustationego focusa   
        $(document).ready(function () {
            $("#searchGroup").mouseleave(function () {
                if (focus != 1) {
                    $("#searchInput").animate({ width: "50%"}, "fast")
                }
            });
        });
</script>
<style>
    .btn-100px{
    width:100px;
}
</style>
  

</head>
<body class="no-overflow">
    <div class="container-fluid">
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a href="#"><img src="~/Images/logo.png" alt="logo" id="logo" height="50"/></a>
            </div>

            <div class="nav navbar-nav">
                <div class="btn-group" id="btnGroup">
                    <button type="button" class="btn btn-default navbar-btn btn-100px">Home</button>
                    <button type="button" class="btn btn-default navbar-btn btn-100px">Samsung</button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle navbar-btn btn-100px" data-toggle="dropdown">
                            Manage <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Choose</li>
                            <li><a href="@Url.Action("Create", "WorkPackage")">Work packages</a></li>
                            <li><a href="@Url.Action("Create", "Company")">Companies</a></li>
                            <li><a href="#">Users</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Info</a></li>
                        </ul>
                    </div>
                </div> 
            </div>
                <form class="navbar-form navbar-nav">
                    <div class="input-group" id="searchGroup" style="margin-left:100px;">
                        <div class="input-group-btn ">
                            <button type="submit" class="btn btn-default" id="searchBtn"><span class="glyphicon glyphicon-search"></span></button>
                        </div>
                        <input type="search" class="form-control" placeholder="Search" id="searchInput" style="width:50%;"  />                      
                    </div>
                </form>                  
            <div class="navbar navbar-nav  pull-right">
                <button class="btn btn-default navbar-btn" style="margin-right:60px;"><span class="glyphicon glyphicon-log-out"></span> Log out</button>    
            </div>                     
        </div>
    </div>
        <div class="row ">
            <div class="col-md-3 show-grid margin-top-1">
                @RenderSection("SidePanel", false)
            </div>
            <div class="col-md-9 show-grid margin-top-1">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
       

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>